{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile and Run",
        "type": "shell",
        "command": "g++ ${fileDirname}/${fileBasenameNoExtension}.cpp -o ${workspaceFolder}/bin/${fileBasenameNoExtension} && ${workspaceFolder}/bin/${fileBasenameNoExtension} < ${fileDirname}/input.txt", 
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": true,
          "clear": false
        },
        "problemMatcher": []
      },
      {
        "label": "Build with Make",
        "type": "shell",
        "command": "make -f ${workspaceFolder}/makefile fileDirname=\"${fileDirname}\" filename=\"${fileBasenameNoExtension}\"",
        "group": "build",
        "problemMatcher": [],
        "options": {
            "cwd": "${fileDirname}" 
        }
    },
    {
        "label": "Run (Make)",
        "type": "shell",
        "command": "${workspaceFolder}/bin/a.out < ${fileDirname}/input.txt",
        "group": "test", 
        "dependsOn": "Build with Make",
        "options": {
            "cwd": "${fileDirname}" 
        }
    }
    ]
  }
  